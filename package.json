{
  "name": "v-uik",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs/*"
  ],
  "scripts": {
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:fix": "yarn run lint:prettier:fix && yarn run lint:eslint:fix",
    "lint:eslint": "eslint packages/** --cache",
    "lint:eslint:fix": "eslint packages/** --fix --cache --no-error-on-unmatched-pattern",
    "lint:prettier": "prettier --loglevel=warn --check .",
    "lint:prettier:fix": "prettier --loglevel=warn --write .",
    "clean": "lerna run clean",
    "rm:lock": "lerna run rm:lock",
    "test": "cross-env TZ=UTC TESTING=true jest",
    "test:e2e": "yarn playwright test",
    "test:unit": "cross-env TZ=UTC jest",
    "test:build": "yarn tsc --project tsconfig.examples.json",
    "ci:sonar:testCoverage": "cross-env TZ=UTC jest --collect-coverage",
    "ci:test:e2e": "cross-env CI=true yarn run test:e2e",
    "build": "lerna run build",
    "publish": "lerna publish",
    "showroom": "lerna run --stream --scope @v-uik/showroom start",
    "showroom:build": "yarn gen-dts-for-monaco && lerna run build --scope @v-uik/showroom",
    "commit": "cz",
    "generate": "hygen generator package",
    "gen-dts-for-monaco": "node ./scripts/gen-dts-for-monaco.js",
    "postinstall": "node ./scripts/theme-parser/update-in-storybook.js"
  },
  "author": "",
  "license": "ISC",
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit $1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "core-js": "^3.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/cz-commitlint": "^14.1.0",
    "@playwright/experimental-ct-react": "^1.23.2",
    "@playwright/test": "^1.23.2",
    "@testing-library/dom": "^8.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "11.2.7",
    "@testing-library/user-event": "^13.2.1",
    "@types/body-scroll-lock": "^2.6.1",
    "@types/jest": "^26.0.14",
    "@types/react-transition-group": "^4.4.4",
    "@types/resize-observer-browser": "^0.1.6",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "allure-playwright": "2.0.0-beta.14",
    "commitizen": "^4.2.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.23.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^2.5.2",
    "glob": "^7.1.6",
    "hygen": "^6.1.0",
    "jest": "26.2.2",
    "lerna": "^4.0.0",
    "npm-dts": "1.3.12",
    "prettier": "^2.2.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-jss": "^10.9.0",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.0.0",
    "webpack": "^4.0.0"
  },
  "resolutions": {
    "@babel/runtime": "7.17.2",
    "@types/node": "12.20.47",
    "@types/react": "17.0.40",
    "@types/react-dom": "17.0.9",
    "@types/babel__core": "7.1.18",
    "@types/eslint": "7.29.0",
    "@babel/core": "7.17.7",
    "@babel/parser": "7.17.7",
    "@babel/helpers": "7.17.7",
    "@babel/runtime-corejs3": "7.17.7",
    "@babel/plugin-proposal-decorators": "7.17.2",
    "@babel/plugin-transform-modules-systemjs": "7.16.7",
    "@testing-library/dom": "8.9.0",
    "string.prototype.matchall": "4.0.6",
    "electron-to-chromium": "1.4.87",
    "caniuse-lite": "1.0.30001317",
    "babel-loader": "8.2.3",
    "typescript": "3.9.10",
    "domhandler": "4.3.0",
    "minimist": "1.2.5",
    "jake": "10.8.2",
    "json5": "2.2.0"
  }
}
